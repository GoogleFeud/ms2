{
    "compilerOptions": {
      "target": "es6",                         
      "module": "commonjs",                
      "declaration": true,                   
      "outDir": "./dist",                    
      "rootDir": "./src",                      
      "removeComments": true,                
      "downlevelIteration": true,            
      "strict": true,                         
      "noImplicitAny": true,                 
      "esModuleInterop": true,                  
      "skipLibCheck": true,                 
      "allowSyntheticDefaultImports": true,
      "forceConsistentCasingInFileNames": true  
    },
    "exclude": [
      "./test/",
      "./dist/"
    ]
  }